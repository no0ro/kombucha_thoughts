<%# <--! /kombuchas/3--> %>
<div class="container-fluid">
        <br>
        <br>
    <div class="card " style="width: 45rem;" > 
        <% if flash[:notice] %>
            <div class="alert-success"><%= flash[:notice] %></div>
        <% end %>

        <div class="card-body mx-auto">
            <h4 class="card-title shiftH1 mb-2"> <%= @kombucha.flavor %> </h4><br>

            <div class="shifth3"> Brand: <%= @kombucha.brand.name%></div>
            <div class="shifth3"> Description: <%= @kombucha.description %></div>
             
            <br>

            <h6 class="card-subtitle mb-2 shiftp text-muted small"> 
                Added By:  <%= @kombucha.user.username %> 
            </h6>
            <%= edit_kombucha_if_creator %>
            <br>
            <a class="btn btn-primary" <%= link_to "Write A Review", new_kombucha_review_path(@kombucha)%> </a> 
            <a class="btn btn-primary tab" <%= link_to "View This Kombuchas Reviews" , kombucha_reviews_path(@kombucha) %></a> 
        </div>
    </div>
    <br>
    <br>
</div> 

