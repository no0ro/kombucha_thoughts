        <%= link_to "Add a Review", new_kombucha_review_path(kombucha) %> | <%= link_to "All Reviews", kombucha_reviews_path(kombucha) %>
        <%# <%= button_to "delete", kombucha, :method => :delete %> 
        </li><br>
    <% end %>
 </ul>
</div>






