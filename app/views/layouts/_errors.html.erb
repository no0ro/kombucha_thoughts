<div class="field">
<% if object.errors.any? %>
  <div id="error_explanation" class="col-11 offset-1">
    <h2>
      <%= pluralize(object.errors.count, "error") %> 
        prohibited this from being saved:
    </h2>
 
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
</div>
