<%# 
# UN-NESTED: click "All Reviews"  || /reviews 
# NESTED: click "View All Reviews for:__" || /kombuchas/:id/reviews  
%>

<div class="container-fluid text-center">
    <% if @kombucha %>
        <div class="shiftH3"> ALL COMMUNITY REVIEWS FOR: </div> 
        <div class="shiftH1"><%= @kombucha.flavor %> - <%= @kombucha.brand.name %> </div><br>

        <a class="btn btn-primary" <%= link_to "Write A Review", new_kombucha_review_path(@kombucha)%> </a> 
        <a class="btn btn-primary" <%= link_to "3 Newest Reviews", reviews_newest_reviewed_path %> </a> 

        <hr>
    <% else %>
        <div class="shiftH1">ALL REVIEWS</div>
        <p class="shiftp">Explore the Communities Kombucha Thoughts</p>
        <a class="btn btn-primary" <%= link_to "3 Newest Reviews", reviews_newest_reviewed_path %> </a> 

        <hr>
    <% end %>

    <br>
        <%# if @kombucha %>
                <%# <h1> Average Rating: <%= @avg_rating%> 
        <%# end %>

        <div>
            <% @reviews.each do |review| %> 
                <div class="card mx-auto" style="width: 45rem;" > 
                    <div class="card-body">
                        <h4 class="card-title shiftH3 mb-2"><%= link_to review.title, review_path(review) %> </h4>
                        <h6 class="card-subtitle mb-2 shiftp text-muted"> <%= review.kombucha.flavor%> by <%= review.kombucha.brand.name%></h6>
                        <p>Rating: <%= review.rating%></p><br>

                        <p class="small"> Reviewed By: <%= review.user.username%> on <%= review.date_formatted%></p>
                    </div>
                </div><br>
            <% end %>
        </div>
</div>