<%# <--! /reviews/3--> %>

<div class="container-fluid  ">
    <div class="shiftH1"> Review for: </div>


    <div class="card " style="width: 55rem;" > 
       <% if flash[:notice] %>
            <div class="alert-success"><%= flash[:notice] %></div>
        <% end %>
        
        <div class="card-body">
        <h4 class="card-title shiftH3 mb-2">  <%= @review.kombucha.flavor %> - <%= @review.kombucha.brand.name %> </h4><br>

            <div class="shiftp"> Rating: <%= @review.rating%></div>
            <div class="shiftp">Title: <%= @review.title%></div>
            <div class="shiftp" > Content: <%= @review.content %></div>
            <br>
             <h6 class="card-subtitle mb-2 shiftp text-muted small"> Reviewed by: <%= @review.user.username%> on <%=@review.date_formatted %> </h6> 
            
            <% if logged_in? && @review.user_id == current_user.id %>
                <h6 class=" mb-2 shiftp text-muted small"><%=link_to "Edit Review", edit_review_path(@review) %> </h6> 
                <h6 class=" mb-2 shiftp text-muted small"><%=button_to "Delete This Review", review_path(@review), method: :delete %></h6>
            <% end %>   
        </div>
        <div class="card-footer">
            <div class="shiftp"><strong>- View All Reviews for: <%= link_to @kombucha.flavor, kombucha_reviews_path(@kombucha) %> - </strong></div>
        </div>
    </div>

</div>

